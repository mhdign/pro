{
  "name": "financial-management-system",
  "version": "2.0.0",
  "description": "Modern Financial Management System with TypeScript, PHP, and Modern Web Technologies",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\" \"npm run dev:php\"",
    "dev:css": "sass --watch src/styles:public/css --style=compressed",
    "dev:js": "tsc --watch",
    "dev:php": "php -S localhost:8000 -t public",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/styles:public/css --style=compressed --no-source-map",
    "build:js": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,scss}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist public/css public/js",
    "start": "php -S localhost:8000 -t public"
  },
  "keywords": [
    "financial-management",
    "typescript",
    "php",
    "modern-web",
    "authentication",
    "dashboard"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "sass": "^1.77.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.6.0",
    "axios": "^1.7.0",
    "framer-motion": "^11.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "react-icons": "^5.2.0",
    "react-multi-date-picker": "^4.5.2",
    "zod": "^3.23.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
